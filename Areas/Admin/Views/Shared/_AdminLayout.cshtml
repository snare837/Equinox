}

<nav class="navbar navbar-expand-md navbar-dark bg-dark">
    <div class="container-fluid">
        <!-- Left: Equinox Brand -->
        <a class="navbar-brand text-white" asp-area="" asp-controller="Home" asp-action="Index">Equinox</a>

                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="ManageClub">Manage Club</a>
                    </li>
                    <li class="nav-item ms-3">
