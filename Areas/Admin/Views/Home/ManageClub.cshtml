@model List<Equinox.Models.Club>

@{
    ViewBag.Title = "Manage Club";
}

<h2>Manage Club</h2>
<a asp-action="AddClub" class="btn btn-primary mb-3">Add Club</a>   

@if (Model.Count == 0)
{
    <p>No clubs exist.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ClubId</th>
                <th>Name</th>
                <th>PhoneNumber</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.ClubId</td>
                    <td>@item.Name</td>
                    <td>@item.PhoneNumber</td>
                    <td>
                        <a asp-action="EditClub" asp-route-id="@item.ClubId" class="btn btn-warning btn-sm me-2">Edit</a>
                        <form asp-action="DeleteClub" method="post">
                            <input type="hidden" name="id" value="@item.ClubId" />
                            <button type="submit" class="btn btn-secondary btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-action="index" asp-controller="Home" class="btn btn-outline-primary">Back to Admin page</a>
