@model List<Equinox.Models.Membership>

@{
    ViewBag.Title = "Manage Memberships";
}

<h2>Manage Memberships</h2>

<a asp-action="AddMembership" class="btn btn-primary mb-3">Add Membership</a>

@if (Model.Count == 0)
{
    <p>No memberships exist.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>MembershipId</th>
                <th>Name</th>
                <th>Price</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.MembershipId</td>
                    <td>@item.Name</td>
                    <td>@item.Price</td>
                    <td>
                        <a asp-action="EditMembership" asp-route-id="@item.MembershipId" class="btn btn-warning btn-sm me-2">Edit</a>
                        <form asp-action="DeleteMembership" method="post" style="display:inline;">
                            <input type="hidden" name="id" value="@item.MembershipId" />
                            <button type="submit" class="btn btn-secondary btn-sm">Delete</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-action="Index" asp-controller="Home" class="btn btn-outline-primary">Back to Admin page</a>