@model Equinox.Models.ViewModels.EquinoxViewModel

@{
    ViewData["Title"] = "Class Details";
}

<div class="container mt-5">
    <div class="row">
        <!-- Image -->
        <div class="col-md-6">
            <img src="~/images/@Model.EquinoxClass.ClassPicture" class="img-fluid rounded shadow"
                alt="@Model.EquinoxClass.Name" />
        </div>

        <!-- Details -->
        <div class="col-md-6">
            <h2>@Model.EquinoxClass.Name</h2>
            <p><strong>Day:</strong> @Model.EquinoxClass.ClassDay</p>
            <p><strong>Time:</strong> @Model.EquinoxClass.Time</p>
            <p><strong>Club:</strong> @Model.EquinoxClass.ClubName</p>
            <p><strong>Category:</strong> @Model.EquinoxClass.ClassCategoryName</p>
            <p><strong>Coach:</strong> @Model.EquinoxClass.UserName


            <form asp-controller="Home" asp-action="BookClass" asp-route-id="@Model.EquinoxClass.EquinoxClassId"
                method="post" class="d-inline">
                <button type="submit" class="btn btn-primary mt-3 me-2">Book This Class</button>
            </form>

            <a asp-action="Index" asp-controller="Home" class="btn btn-outline-primary mt-3">Back to Classes</a>


        </div>
    </div>
</div>
