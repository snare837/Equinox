@model Equinox.Models.ViewModels.EquinoxViewModel

@{
    ViewData["Title"] = "Class Details";
}

<div class="container mt-5">
    <div class="row">
        <!-- Image -->
        <div class="col-md-6">
            <img src="~/images/@Model.EquinoxClass.ClassPicture" class="img-fluid rounded shadow" alt="@Model.EquinoxClass.Name" />
        </div>

        <!-- Details -->
        <div class="col-md-6">
            <h2>@Model.EquinoxClass.Name</h2>
            <p><strong>Day:</strong> @Model.EquinoxClass.ClassDay</p>
            <p><strong>Time:</strong> @Model.EquinoxClass.Time</p>
            <p><strong>Club:</strong> @Model.EquinoxClass.Club.Name</p>
            <p><strong>Category:</strong> @Model.EquinoxClass.ClassCategory.Name</p>
            <p><strong>Coach:</strong> @Model.EquinoxClass.User?.Name


            <form asp-controller="Home" asp-action="BookClass" asp-route-id="@Model.EquinoxClass.EquinoxClassId" method="post">
                <button type="submit" class="btn btn-primary mt-3">Book This Class</button>
            </form>
        </div>
    </div>
</div>

