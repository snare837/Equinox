@model List<Equinox.Models.EquinoxClass>

@{
    ViewBag.Title = "My Bookings";
}

<h2>My Bookings</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}

@if (Model.Count == 0)
{
    <p>No classes booked.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Class</th>
                <th>Day</th>
                <th>Time</th>
                <th>Club</th>
                <th>Category</th>
                <th>Coach</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.ClassDay</td>
                    <td>@item.Time</td>
                    <td>@item.Club?.Name</td>
                    <td>@item.ClassCategory?.Name</td>
                    <td>@item.User?.Name</td>
                    <td>
                        <form asp-action="CancelBooking" method="post">
                            <input type="hidden" name="id" value="@item.EquinoxClassId" />
                            <button type="submit" class="btn btn-secondary btn-sm">Cancel</button>
                        </form>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

<a asp-action="index" asp-asp-controller="Home" class="btn btn-outline-primary">Back to Filter</a>
